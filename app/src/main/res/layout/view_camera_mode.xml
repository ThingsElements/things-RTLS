<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

        <org.opencv.android.JavaCameraView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/camera_preview"
            opencv:show_fps="true"
            opencv:camera_id="any"
            android:layout_weight="0.25"/>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/CameraTextBackground"
            android:baselineAligned="false"
            android:layout_weight="0.8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.57"
                android:orientation="vertical"
                android:paddingLeft="13sp"
                android:paddingBottom="6sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.6"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Quaternions"
                        android:textColor="@color/CameraLabelText"
                        android:textAlignment="textStart"
                        android:textSize="17sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.6"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="44sp"
                        android:layout_height="match_parent"
                        android:text="- W"
                        android:textColor="@color/CameraLabelText"
                        android:textAlignment="textStart"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tvSensorW"
                        android:layout_width="75sp"
                        android:layout_height="match_parent"
                        android:text="1.999992"
                        android:textColor="@color/CameraLabelText"
                        android:textAlignment="textEnd"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.6"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="44sp"
                        android:layout_height="match_parent"
                        android:text="- X"
                        android:textColor="@color/CameraLabelText"
                        android:textAlignment="textStart"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tvSensorX"
                        android:layout_width="75sp"
                        android:layout_height="match_parent"
                        android:text="1.999992"
                        android:textColor="@color/CameraLabelText"
                        android:textAlignment="textEnd"
                        android:textSize="14sp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.6"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="44sp"
                        android:layout_height="match_parent"
                        android:text="- Y"
                        android:textColor="@color/CameraLabelText"
                        android:textAlignment="textStart"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tvSensorY"
                        android:layout_width="75sp"
                        android:layout_height="match_parent"
                        android:text="1.999992"
                        android:textColor="@color/CameraLabelText"
                        android:textAlignment="textEnd"
                        android:textSize="14sp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.6"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="44sp"
                        android:layout_height="match_parent"
                        android:text="- Z"
                        android:textColor="@color/CameraLabelText"
                        android:textAlignment="textStart"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tvSensorZ"
                        android:layout_width="75sp"
                        android:layout_height="match_parent"
                        android:text="1.999992"
                        android:textColor="@color/CameraLabelText"
                        android:textAlignment="textEnd"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/loFlotter"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.4"
                android:paddingLeft="33sp"
                android:paddingBottom="6sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.6"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Euler Angle"
                        android:textAlignment="textStart"
                        android:textColor="@color/CameraLabelText"
                        android:textSize="17sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.6"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="44sp"
                        android:layout_height="match_parent"
                        android:text="- Yaw"
                        android:textColor="@color/CameraLabelText"
                        android:textAlignment="textStart"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tvSensorYaw"
                        android:layout_width="75sp"
                        android:layout_height="match_parent"
                        android:text="1.999992"
                        android:textColor="@color/CameraLabelText"
                        android:textAlignment="textEnd"
                        android:textSize="14sp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.6"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="44sp"
                        android:layout_height="match_parent"
                        android:text="- Pitch"
                        android:textColor="@color/CameraLabelText"
                        android:textAlignment="textStart"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tvSensorPitch"
                        android:layout_width="75sp"
                        android:layout_height="match_parent"
                        android:text="-1.999992"
                        android:textColor="@color/CameraLabelText"
                        android:textAlignment="textEnd"
                        android:textSize="14sp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.6"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="44sp"
                        android:layout_height="match_parent"
                        android:text="- Roll"
                        android:textColor="@color/CameraLabelText"
                        android:textAlignment="textStart"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tvSensorRoll"
                        android:layout_width="75sp"
                        android:layout_height="match_parent"
                        android:text="1.999992"
                        android:textColor="@color/CameraLabelText"
                        android:textAlignment="textEnd"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

</LinearLayout>


