<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="130sp"
        android:id="@+id/loTop"
        android:layout_alignParentTop="true"
        android:background="@drawable/bnr_login">

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/loTop"
        android:id="@+id/loMiddle"
        android:paddingBottom="30sp"
        android:layout_marginLeft="27sp"
        android:layout_marginRight="27sp">

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:ems="10"
            android:hint="ID"
            android:inputType="textEmailAddress"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColorHighlight="@color/Cursor"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etEmail"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/btnLogin"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/etPassword"
            android:layout_below="@+id/etPassword"
            android:layout_marginTop="35sp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_login"/>

    </android.support.v7.widget.LinearLayoutCompat>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="27sp"
        android:layout_marginRight="27sp"
        android:layout_marginBottom="13sp">

        <Button
            android:id="@+id/btnRegister"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Sign up"
            android:background="@android:color/transparent"
            android:textSize="13sp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btnResetPwd"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Reset Password"
            android:background="@android:color/transparent"
            android:textSize="13sp"
            android:textAllCaps="false"/>

    </RelativeLayout>

</RelativeLayout>