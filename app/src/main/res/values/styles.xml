<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
         Customize your theme here.
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/actionBarBackground</item>

        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

        <!--<item name="android:actionBarTheme">@style/ActionBar</item>-->
        <item name="android:itemTextAppearance">@style/ActionBarMenuText</item>

    </style>


    <style name="ActionBar" parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">

        <item name="android:background">@color/actionBarBackground</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/actionBarText</item>

    </style>


    <style name="ActionBarMenuText" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/actionBarBackground</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
